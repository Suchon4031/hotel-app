<%= render "hotels/header" %>

<div class="user-show-main">
  <div class="user-show-contents">
    <div class="user-show-name">
      <%= @user.nickname %> さんの投稿
    </div>
    <div class="user-show-hotels">
      
      <div class="lists">
        <ul class='hotel-lists'>
          <%  @hotels.each do |hotel| %>
            <li class='list'>
              <div class='hotel-img-content'>
                <%= link_to hotel_path(hotel) do %>
                  <%= image_tag hotel.images[0], class: "hotel-img" %>
                <% end %>
              </div>
              <div class='hotel-info'>
                <div class="hotel-info-top">
                  <div class="hotels-name">
                    <%= link_to hotel.name, hotel_path(hotel), class:"hotel-name" %>
                  </div>
                  <div id="like-btn<%= hotel.id %>", class="like-btn-space">
                    <%= render partial: "likes/like", locals: { hotel: hotel } %>
                  </div>
                </div>
                <div class='hotel-address'>
                  <span><%= hotel.prefecture.name %>  <%= hotel.city %></span>
                </div>
                <div class="user-name">
                  <%= hotel.user.nickname %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>