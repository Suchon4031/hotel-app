<%= render "header" %>

<div class="hotel-new-main">
  <div class="hotel-form">
    <%= form_with(model: @hotel, id: 'new-form', local: true) do |f| %>

      <%= render 'shared/error_messages', model: f.object %>

      <%# 商品画像 %>
      <div class="img-upload">
        <div class="weight-bold-text">
          画像
          <span class="indispensable">必須</span>
        </div>
        <div class="click-upload">
          <p>
            クリックしてファイルをアップロード
          </p>
          <%= f.file_field :images, name: 'hotel[images][]', data: {index: 0}, id:"hotel-image" %>
        </div>
        <div id="previews"></div>
      </div>
      <%# /商品画像 %>

      


      <div class="new-hotel">
        <div class="new-hotel-name">
          <div class="weight-bold-text">
            施設名
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_area :name, class:"hotels-text", id:"hotel-name", placeholder:"ホテル・旅館名", maxlength:"40" %>
        </div>
        <div class="new-hotel-address">
          <div class="new-hotel-prefecture">
            <div class="weight-bold-text">
              都道府県
              <span class="indispensable">必須</span>
            </div>
            <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"hotel-prefecture"}) %>
          </div>
          <div class="new-hotel-city">
            <div class="weight-bold-text">
              市町村
              <span class="indispensable">必須</span>
            </div>
            <%= f.text_area :city, class:"hotels-text", id:"hotel-city", placeholder:"例）横浜市中区" %>
          </div>
        </div>

        <div class="new-hotel-explain">
          <div class="weight-bold-text">
            概要
          </div>
          <%= f.text_area :text, class:"hotels-text", id:"hotel-text", placeholder:"例）清潔感があり過ごしやすい" ,rows:"7" ,maxlength:"1000" %>
        </div>
      </div>

      <div class="create-btn-contents">
        <div class="mew-btn-space">
          <div class="new-submit-btn">
            <%= f.submit "編集する" ,class:"create-btn" %>
          </div>
          <div class="back-btn">
            <%=link_to '戻る', hotel_path(@hotel), class:"back-btn-text" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>